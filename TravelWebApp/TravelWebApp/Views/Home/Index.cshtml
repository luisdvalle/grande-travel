@{
    ViewData["Title"] = "Index";
}
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/images/travel6.jpg" alt="First slide">
                    <div class="carousel-caption d-none d-md-block">
                        <div class="d-block p-2 bg-dark text-white grande-slide-bg">
                            <h1>The best Travel Packages in Australia</h1>
                            <p>See our packages</p>
                            <p><a class="btn btn-lg btn-primary" role="button" asp-action="Search" asp-controller="TravelPackage">Go</a></p>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/travel7.jpg" alt="Second slide">
                    <div class="carousel-caption d-none d-md-block">
                        <div class="d-block p-2 bg-dark text-white grande-slide-bg">
                            <h1>The best prices you can get</h1>
                            <p>See for yourself</p>
                            <p><a class="btn btn-lg btn-primary" role="button" asp-action="Search" asp-controller="TravelPackage">Go</a></p>
                        </div>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <hr class="featurette-divider">

        <div class="container marketing">

            <h2>Welcome to Grande Travel</h2>

            <p>
                Grande Travel is a company that provides travel packages to make your travel spectacular. It currently
                specialises in Australian destinations olny, with the possibility of expanding to world-wide destinations
                in the future.
            </p>
        </div>